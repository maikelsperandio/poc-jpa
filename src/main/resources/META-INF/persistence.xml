<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">

    <persistence-unit name="poc-jpa" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.maikelsoft.poc.jpa.domain.Employee</class>
        <class>com.maikelsoft.poc.jpa.domain.Address</class>
        <class>com.maikelsoft.poc.jpa.domain.Project</class>
        <class>com.maikelsoft.poc.jpa.domain.AccessCard</class>
        <class>com.maikelsoft.poc.jpa.domain.Department</class>
        <class>com.maikelsoft.poc.jpa.domain.ProjectDetails</class>
        <class>com.maikelsoft.poc.jpa.domain.Task</class>
        <class>com.maikelsoft.poc.jpa.domain.CodingTask</class>
        <class>com.maikelsoft.poc.jpa.domain.BusinessTask</class>

<!--        <class>com.maikelsoft.poc.jpa.identifiers.Subscription</class>-->
        <class>com.maikelsoft.poc.jpa.identifiers.EmployeeProfile</class>
        <class>com.maikelsoft.poc.jpa.identifiers.Skill</class>
        <class>com.maikelsoft.poc.jpa.identifiers.EmployeeSkill</class>
        <class>com.maikelsoft.poc.jpa.identifiers.EmployeeSkillId</class>

        <properties>
            <!-- H2 Database Connection -->
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:mem:jpa-training;MODE=Oracle"/>
            <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <!-- Hibernate Properties -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- MySQL Database Connection -->
<!--            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>-->
<!--            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/jpa_poc?autoReconnect=true"/>-->
<!--            <property name="jakarta.persistence.jdbc.user" value="root"/>-->
<!--            <property name="jakarta.persistence.jdbc.password" value="123456"/>-->

<!--            &lt;!&ndash; Hibernate Properties &ndash;&gt;-->
<!--            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>-->
<!--            <property name="hibernate.hbm2ddl.auto" value="update"/>-->
<!--            <property name="hibernate.show_sql" value="true"/>-->
<!--            <property name="hibernate.format_sql" value="true"/>-->
        </properties>
    </persistence-unit>
</persistence>